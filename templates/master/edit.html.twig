{% extends 'base.html.twig' %}

{% block title %}Edit Status
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Edit Status</h1>
					</div>
					<div class="card-body">
						<form action="{{path('master_update', {id: master.id})}}" method="POST">
							<div class="form-group">
								<label>Name:</label>
								<input type="text" name="master_name" class="form-control" value="{{master.name}}">
							</div>
							<button type="submit" class="btn btn-primary">Edit Status</button>
							<input type="hidden" name="token" value="{{ csrf_token('create_master_bla') }}"/>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>{% endblock %}
