{% extends 'base.html.twig' %}

{% block title %}Create new Task
{% endblock %}

{% block body %}

	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-8">
				<div class="card">
					<div class="card-header">
						<h1>Create new Task</h1>
					</div>

					<div class="card-body">
						<form action="{{path('outfit_store')}}" method="POST">

							<div class="form-group">
								<label>Name:</label>
								<input type="text" class="form-control" name="outfit_type">
							</div>

							<div class="form-group">
								<label>Date:</label>
								<input type="text" class="form-control" name="outfit_size">
							</div>

							<div class="form-group">
								<label>About:</label>
								<textarea name="outfit_about" id="summernote"></textarea>
							</div>


							<div class="form-group">
								<select name="outfit_master_id" class="form-control">
									<option value="0">Select status</option>
									{% for master in masters %}
										<option value="{{master.id}}">{{master.name}}</option>
									{% endfor %}
								</select>
							</div>

							<button type="submit" class="btn btn-dark">Add new Task</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>


{% endblock %}
